	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHZEVBusrjURb8tSCv4AhZieSu/+ey92W9yZhvm0r/o4

[alias]
	default-branch = "!git symbolic-ref refs/remotes/origin/HEAD | cut -f4 -d/"
	diff = diff $(git default-branch)
	pom = push origin $(git default-branch)
	merged-branches = "!git branch --merged $(git default-branch)"
	sync = "!git fetch -p && git rebase origin/$(git default-branch)"
	co = "checkout"
	cp = "cherry-pick"
	st = "status"
	wip = "commit -a -m WIP -n"
	fx = "commit --amend -C HEAD"
[commit]
	gpgsign = true
	template = "~/.gitmessage"
[pull]
	rebase = false
[init]
	defaultBranch = main
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = "~/.ssh/allowed_signers"
